{{#section 'title'}}
    Thông tin cá nhân
{{/section}}
{{#section 'js'}}
	<script src="/assests/bootstrap-datepicker/js/bootstrap-datepicker.min.js"></script>
    <script src="/assests/jquery-validation-1.12.0/jquery.validate.min.js"></script>
	<script type="text/javascript">
		$("#changeProfile").click(function(){
    		$("#changePassword").hide();
    		$("#changeProfile").hide();
    		$("#userScore").hide();
    		$("#inputUsername").hide();
    		$("#spaceline").hide();
    		$("#goback").show();
    		$("#save").show();
		});
		// $("#save").click(function(){
  		//$("#changePassword").show();
  		//$("#changeProfile").show();
  		//$("#userScore").show();
  		//$("#save").hide();
		// });
		$('.datepicker').datepicker({
            format: 'd/m/yyyy',
            autoclose: true,
        });

        $('#frmchangeProfile').validate({
            rules: {
                username: {
                    required: true,
                },
                name: {
                    required: true
                },
                email: {
                    required: true,
                    email: true,
                },
                dob: {
                    required: true
                },
                address: {
                    required: true
                },
            },

            messages: {
                username: {
                    required: 'Vui lòng nhập username.'
                },
                name: {
                    required: 'Vui lòng nhập họ tên'
                },
                email: {
                    required: 'Vui lòng nhập email',
                    email: 'EMail không đúng định dạng'
                },
                dob: {
                    required: 'Vui lòng chọn ngày sinh'
                },
                address: {
                    required: 'Vui lòng nhập địa chỉ'
                },
            },

            errorElement: 'span',
            errorClass: 'help-block',

            highlight: function (element) {
                $(element)
                    .closest('.input-group')
                    .addClass('control has-error');
            },

            success: function (label) {
                $(label)
                    .closest('.input-group')
                    .removeClass('control has-error');

                label.remove();
            },
        });
	</script>
{{/section}}
{{!-- body --}}
<!-- Body -->
    <form id="frmchangeProfile" method="post" action="" class="col-xs-8 col-sm-8 col-md-8 col-lg-8" style="margin-bottom: 20px">
        <div class="mainbox" id="loginbox">
            <div class="panel panel-info">
                <div class="panel-heading ">
                    <div class="panel-title">
                        Thông tin cá nhân
                    </div>
                    <div style="float:right; font-size: 80%; position: relative; top:-20px">
                        <button  id="changeProfile" type="button"  class="btn btn-default btn-xs">
                            Chỉnh sửa thông tin cá nhân
                        </button>
                    </div>
                </div>
                <div  class="panel-body" style="padding-top:30px;">
                    <div class="form-horizontal col-sm-12" role="form">
                        <div class="input-group" id="inputUsername">
                            <span class="input-group-addon">
                                <i class="glyphicon glyphicon-user">
                                </i>
                            </span>
                            <input class="form-control" placeholder="Username" type="text" name="username" >
                            </input>
                        </div>
                        <div id="spaceline"><br></div>
                        <div class="input-group">
                            <span class="input-group-addon">
                                <i class="glyphicon glyphicon-envelope">
                                </i>
                            </span>
                            <input class="form-control" placeholder="Your Email" type="text" name="email" >
                            </input>
                        </div>
                        <div><br></div>
                        <div class="input-group">
                            <span class="input-group-addon">
                                <i class="glyphicon glyphicon-tag">
                                </i>
                            </span>
                            <input class="form-control" type="text" placeholder="Your Fullname" name="name"  >
                            </input>
                        </div>
                        <div><br></div>
                        <div class="input-group">
                            <span class="input-group-addon">
                                <i class="glyphicon glyphicon-calendar">
                                </i>
                            </span>
                            <input class="form-control datepicker" type="text" placeholder="Your Birthday" name="dob"  >
                            </input>
                        </div>
                        <div><br></div>
                        <div class="input-group">
                            <span class="input-group-addon">
                                <i class="glyphicon glyphicon-map-marker">
                                </i>
                            </span>
                            <input class="form-control" placeholder="Your Address" type="text" name="address"  >
                            </input>
                        </div>
                        <div><br></div>
                        <!-- Điểm đánh giá  -->
                        <div class="row form-horizontal" id="userScore">
                        	<div class="col-xs-2 col-sm-2 col-md-2 col-lg-2">
                                <label class="control-label">Điểm</label>
                            </div>
                            <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3" style="margin-left: 9px">
                                <div class="form-group has-success has-feedback">		  	
								  <div class="input-group">
								    <span class="input-group-addon">
								    	<i class="glyphicon glyphicon-plus-sign">
                                    	</i>
								    </span>
								    <input type="text" class="form-control" name="scorePlus" >
								  </div>
								</div>
                            </div>
                            <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3" style="margin-left: 9px">
                                <div class="form-group has-error has-feedback">
								  <div class="input-group">
								    <span class="input-group-addon">
								    	<i class="glyphicon glyphicon-minus-sign">
                                    	</i>
								    </span>
								    <input type="text" class="form-control" name="scoreMinus">
								  </div>
								</div>
                            </div>
                             <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3" style="margin-left: 15px">
                                <div class="form-group has-feedback">
								  <div class="input-group">
								    <span class="input-group-addon">
								    	Tổng
								    </span>
								    <input type="text" class="form-control" name="score" value="5">
								  </div>
								</div>
                            </div>
                        </div>
                        <!-- End điểm đánh giá -->
                        <div class="form-group">
                            <div class="col-md-12 control">
                                <div style="border-top: 1px solid#888; padding-top:15px; font-size:85%">
	                                <div class="row">
                                        <div class="col-md-2" id="goback" hidden>
                                            <a href="/account/profile">Trở về</a>  
                                        </div>

                                        <div class="col-md-2 col-md-offset-7">
    										<button type="submit" class="btn btn-success" id="save" hidden>
											Lưu thay đổi
											</button>	
    									</div>
                                    </div>
                                    <a  id="changePassword" href="/account/changePassword">
                                        Đổi mật khẩu
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
    <!-- END Body -->
