{{#section 'title'}}
    Quản lý người dùng
{{/section}}

{{#section 'js'}}
    <script type="text/javascript">
        $('.removeUser').on('click', function() {
            var id = $(this).data('id');
            $('#txtDelUserID').val(id);
            $('#frmDeleteUsers').submit();
        });
    </script>
{{/section}}

{{!-- body --}}
{{#if showError }}
    <div class="alert alert-warning alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <strong>Warning!</strong> {{ errorMsg }}
    </div>
{{/if}}
<h1>Danh sách người dùng</h1>
<form method="post" action="/account/delete" id="frmDeleteUsers">
    <input type="hidden" name="userID" id="txtDelUserID">
</form>
<table class="table table-hover">
    <thead>
        <tr>
            <th>ID</th>
            <th>Họ tên</th>
            <th>Địa chỉ</th>
            <th>Email</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#each users }}
        <tr>
            <td>{{ID}}</td>
            <td>{{Name}}</td>
            <td>{{Address}}</td>
            <td>{{Email}}</td>
            <td>
                <a href="/account/resetPW/{{ID}}" class="btn btn-xs btn-primary" title="reset password">
                    <span class="glyphicon glyphicon-pencil"></span>
                </a>
                <a href="javascript:;" class="btn btn-xs btn-danger removeUser" data-id="{{ID}}">
                    <span class="glyphicon glyphicon-remove"></span>
                </a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>
{{!-- end body --}}

