{{#section 'title'}}
    Kết quả tìm kiếm
{{/section}}

{{#section 'js'}}
<script type="text/javascript">
    $('.addItem').on('click', function () {
        var proId = $(this).data('id');
        $('#txtP').val(proId);
        $('#frmAddToCart').submit();
    });
</script>
<script type="text/javascript">
    $('#textSearch').val($('#txtname').val());
</script>
{{/section}}

{{#if isEmpty }}
Không có sản phẩm!
{{else}}
<form id="frmAddToCart" method="post" action="/cart/add1">
    <input type="hidden" id="txtP" name="proId" />
</form>
<div class="row">
    <input type="hidden" id="txtname" value="{{name}}" />
    <h4>Có {{length}} sản phẩm tìm kiếm được với từ khóa "{{text}}"
    <h4>#{{findBy}}</h4>
    <h4>#{{arrange}}</h4>
    {{#each products }}
    <div class="col-md-4">
        <div class="thumbnail" style="min-height: 390px; max-width: 300px">
            <img src="/images/{{ProID}}/1_thumb.jpg" title="{{ProName}}" />
            <div class="caption">
                <h4>{{ProName}}</h4>
                <h4>Giá: {{formatNumber Price}}</h4>
                <h4>Tồn: {{Quantity}}</h4>
                <p style="width: 250px;
                white-space: nowrap;
                overflow: hidden;
                text-overflow: ellipsis;">
                {{TinyDes}}
                </p>
                <p>
                    <a href="/product/detail/{{ProID}}" class="btn btn-default" role="button">
                        Chi tiết
                    </a>
                </p>
            </div>
        </div>
    </div>
    {{/each}}
</div>
<div class="row">
    <nav aria-label="Page navigation">
        <ul class="pagination">
            {{#if showPrevPage}}
            <li>
                <a href="?page={{prevPage}}&text={{text}}&findBy={{findBy}}&arrange={{arrange}}">
                    <span class="glyphicon glyphicon-arrow-left"></span>
                </a>
            </li>
            {{/if}}
            {{#each pages }}
            {{#if isActive }}
            <li class="active">
                <a href="?page={{pageValue}}&text={{../text}}&findBy={{../findBy}}&arrange={{../arrange}}">{{pageValue}}</a>
            </li>
            {{else}}
            <li>
                <a href="?page={{pageValue}}&text={{../text}}&findBy={{../findBy}}&arrange={{../arrange}}">{{pageValue}}</a>
            </li>
            {{/if}}
            {{/each}}
            {{#if showNextPage }}
            <li>
                <a href="?page={{pageValue}}&text={{text}}&findBy={{findBy}}&arrange={{arrange}}" aria-label="Next">
                    <span class="glyphicon glyphicon-arrow-right"></span>
                </a>
            </li>
            {{/if}}
        </ul>
    </nav>
</div>
{{/if}}