<!DOCTYPE html>
<html>
	<head>
		<title>edit category</title>
		<link rel="stylesheet" type="text/css" href="/assests/bootstrap-3.3.7-dist/css/bootstrap.min.css">
	</head>
	<body>
		{{#with category }}
		<div class="container">
			<h1>Edit Category</h1>
			<div class="row">
				<div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
					<form method="post" action="/category/edit">
						<div class="form-group">
							<label for="txtCatID">ID danh mục</label>
							<input type="text" class="form-control" id="txtCatID" placeholder="name" name="catID" value="{{CatID}}" readonly>
						</div>
						<div class="form-group">
							<label for="txtCatName">Tên danh mục</label>
							<input type="text" class="form-control" id="txtCatName" placeholder="name" name="catName" value="{{CatName}}">
						</div>
						<a href="/account/manageCategories" class="btn btn-default" title="back">
							<span class="glyphicon glyphicon-backward"></span>
						</a>
						<button type="submit" class="btn btn-success">
							<span class="glyphicon glyphicon-check"></span>
						</button>
					</form>
				</div>
			</div>
			<br/>
		</div>
		{{/with}}
		<script type="text/javascript" src="/assests/jquery-3.1.1.min.js"></script>
		<script type="text/javascript" src="/assests/bootstrap-3.3.7-dist/js/bootstrap.min.js"></script>
	</body>
</html>