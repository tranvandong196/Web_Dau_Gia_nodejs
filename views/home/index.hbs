{{!-- body --}}
<div class="row">
	<div class="nav-section">
	    <div class="icon-new">
	        <h2 class="h-title">
	            Top 5 sản phẩm có nhiều lượt ra giá nhất
	        </h2>
	        <div class="row">
		        {{#each top5OfAuction }}
		        <div class="col-md-6">
		            <div class="thumbnail">
		                <img src="/images/{{ProID}}/1_thumb.jpg" title="{{ProName}}" />
		                <div class="caption">
		                    <h4>{{ProName}}</h4>
		                    <h4>Giá: {{formatNumber Price}}</h4>
		                    <h4>Tồn: {{Quantity}}</h4>
		                    <p style="width: 300px;
							     white-space: nowrap;
							     overflow: hidden;
							     text-overflow: ellipsis;">
							     {{TinyDes}}</p>
	                    	<p>
		                    <p>
		                        <a href="/product/detail/{{ProID}}" class="btn btn-default" role="button">
		                            Chi tiết
		                        </a>
		                        {{#if ../layoutModels.isLogged }}
		                            <a href="javascript:;" class="btn btn-success addItem" role="button" data-id="{{ProID}}">
		                                <i class="fa fa-cart-plus"></i>
		                                Đặt mua
		                            </a>
		                        {{/if}}
		                    </p>
		                </div>
		            </div>
		        </div>
		        {{/each}}
	    	</div>
	    </div>
	</div>
</div>
